<div class="modal-header">
    <h4 class="modal-title">{{ 'cms.media.edit_properties' | trans }}</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
            aria-hidden="true">&times;</span></button>
</div>

<div class="modal-body">
    <form action="{{ app.request.requestUri }}"
          method="post">
        {{ form_errors(form) }}

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.height) }}
                {{ form_row(form.width) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.alignment) }}
            </div>
        </div>
        {{ form_rest(form) }}

        <div class="form-group text-right">
            <a href="#" data-dismiss="modal">{{ 'cms.main.cancel' | trans }}</a>
            <input type="submit" class="btn btn-primary" value="{{ 'cms.main.save' | trans }}" />
        </div>
    </form>
</div>

